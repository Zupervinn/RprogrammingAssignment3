library(dplyr)

best <- function(state, outcome){
        read_file <- read.csv("outcome-of-care-measures.csv", colClasses = "character" )
        state <- select(outcome, State, contains(state)) ##selecting state by name
        30days <- select(outcome, matches(""))
}

}
#sort by col
function (data, col1, col2){
        orderdata <- data[order(data[,col1],data[,col2]),]
        return(orderdata)
}
#sort by State
function (data, country, column){
        countrydata <- data [grep(country,data$State),]
        orderdata <- countrydata[order(countrydata[,column]),]
        return (orderdata)
}
